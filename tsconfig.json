{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "declaration": true,
    // "declarationMap": true,
    "declarationDir": "packages/gale-icons/gi/types",
    // "sourceMap": true,
    "outDir": "packages/gale-icons/gi",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/Generated-icon-components/gi"],
  "exclude": ["node_modules", "build", "scripts"]
}
